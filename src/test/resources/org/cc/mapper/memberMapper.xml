<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.cc.mapper.memberMapper"> <!-- 인터페이스위치 -->

<!-- 회원가입 -->
	<insert id="register">
	    insert into ccdb(userId, userPwd, userName,userSex,userBrith,userEmail)
	    		values(#{userId},#{userPwd},#{userName},#{userSex},#{userBirth},#{userEmail})

    </insert>
    
    <!-- 로그인 -->
	<select id="login" resultType="org.cc.domain.MemberVO">
		SELECT USERID, USERPASS 
		  FROM MP_MEMBER
		 WHERE USERID = #{userId}
		   AND USERPASS = #{userPass}   
	</select>

</mapper>